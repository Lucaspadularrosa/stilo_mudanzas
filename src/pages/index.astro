	}

	section {
		padding: 4rem 1rem;
	}

	.services, .about, .contact {
		max-width: 1200px;
		margin: 0 auto;
	}

	h2 {
		text-align: center;
		color: var(--secondary);
		margin-bottom: 3rem;
	}

